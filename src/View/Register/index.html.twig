{% extends 'layout.html.twig' %}
{% block header %}{% endblock %}
{% block belt %}{% endblock %}
{% block beard %}{% endblock %}

{% block content %}
	<article class="register">
		<h1>Rejoins la communaut√© des toucheurs</h1>
	</article>
	{% for error in errors %}
		<p>
			{{error}}
		</p>
	{% endfor %}

	<article class="register">
		<form action="" method="post">

			<input type="hidden" value="{{ product.id }}" name="id">

			<div class="register-container">

				<div class="div-register">
					<label for="user_name">Nom du nouveau toucheur</label>
				</div>

				<div class="div-register">
					<input type="text" value="{{ user.user_name }}" id="user_name" name="user_name" placeholder="Nom du nouveau toucheur">
				</div>

				<div class="div-register">
					<label for="pseudo">Ton pseudo de toucheur</label>
				</div>

				<div class="div-register">
					<input type="text" value="{{ user.pseudo }}" id="pseudo" name="pseudo" placeholder="Ton pseudo de toucheur" required>
				</div>

				<div class="div-register">
					<label for="email">Ton email, nouveau toucheur</label>
				</div>

				<div class="div-register">
					<input type="email" value="{{ user.email }}" id="email" name="email" placeholder="Ton email, nouveau toucheur">
				</div>

				<div class="div-register">
					<label for="password" class="form-label">Choisis ton nouveau mot de passe, nouveau toucheur</label>
				</div>

				<div class="div-register">
					<input type="password" id="password" name="password" required>
				</div>

				<div class="div-register">
					<label for="adress">Ton adresse</label>
				</div>

				<div class="div-register">
					<input type="text" value="{{ user.adress }}" id="adress" name="adress" placeholder="Ton adresse">
				</div>

				<div class="div-register">
					<label for="zip_code">Ton code postal</label>
				</div>

				<div class="div-register">
					<input type="number" value="{{ user.zip_code }}" id="zip_code" name="zip_code" placeholder="Ton code postal">
				</div>

				<div class="div-register">
					<label for="city">Ta Ville</label>
				</div>

				<div class="div-register">
					<input type="text" value="{{ user.city }}" id="city" name="city" placeholder="Ta ville">
				</div>
				<div class="div-register">

					<a href="/touch" role="button" class="button-register">Bienvenue chez les toucheurs !!!! 
					<img class="logo-register" src="/assets/images/boulogo_red.png" alt="logo du site kitouchki"></a>

				</div>
			</form>

		</article>
	{% endblock %}
